{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch HTTP Server",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}-http",
            "preLaunchTask": "buildHttp",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Launch Kafka Consumer",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/bin/${workspaceFolderBasename}-kafka",
            "preLaunchTask": "buildKafka",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}